{% extends "base.html.twig" %}

{% block body %}

	<!-- HEADER -->
	<header id="gtco-header" class="gtco-cover gtco-cover-sm loginConn" role="banner" style="background-image:url(/images/img_login_1.png);">
		<div class="gtco-container">
			<div class="row">
				<div class="col-md-8 col-md-offset-2 text-center">
					<div class="display-t">
						<div class="display-tc animate-box" data-animate-effect="fadeIn">
							<h1></h1>
							<h2><a href="#" target="_blank"></a></h2>
						</div>
					</div>
				</div>
			</div>
		</div>
	</header>

<!-- DOCUMENT VIEW -->
<div class="gtco-section">
	<div class="gtco-container">
		<div class="row">
			    <div class="col-md-8 animate-box login">
					<h1>Connexion</h1>
                     {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
				    <form method="post">
					    <div class="row form-group">
						    <div class="col-md-12">
							    <label for="email">Email</label>
							    <input type="text" id="email" name="email" class="form-control" placeholder="Votre email" value="{{ last_username }}" required/>
						    </div>
					    </div>

					    <div class="row form-group">
						    <div class="col-md-12">
							    <label for="password">Votre mot de passe</label>
							    <input type="password" id="password" name="password" class="form-control" placeholder="Votre mot de passe" required/>
						    </div>
					    </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

					    <div class="form-group">
						    <input type="submit" class="btn btn-primary" value="Connexion"/>
                            <a href="{{path('home')}}" class="btn btn-info pull-right">Accueil</a>
					    </div>
				    </form>
		    </div>
        </div>
    </div>
</div>

{% endblock %}