{% extends 'base.html.twig' %}

{% block body %}

<div class="gtco-loader"></div>
	
<div id="page">

	<!-- NAVIGATION -->
	{% include "nav/nav.html.twig" %}

	<!-- HEADER -->
	{% include "header/header.theme.html.twig" %}

	<div id="gtco-features">
		<div class="gtco-container">
			<div class="row">
			{% for document in documents %}
			{# {{dump(document)}} #}
				<div class="col-md-4 col-sm-4 animate-box" data-animate-effect="fadeIn">
					<div class="feature-center">
						<span class="icon">
						{% if document.category.id == 1 %}
							<i class="icon-eye"></i>
						{% elseif document.category.id == 2 %}
							<i class="icon-command"></i>
                        {% elseif document.category.id == 3 %}
							<i class="icon-pencil"></i>
                        {% elseif document.category.id == 4 %}
							<i class="icon-laptop"></i>        
						{% endif %}		
						</span>
						<h3>{{ document.category.name }}</h3>
						<p><a href="{{ path("document_list", { 'document': document.category.name}) }}" class="btn btn-primary">Voir les documents</a></p>
					</div>
				</div>
			{% endfor %}	
			</div>
		</div>
	</div>
</div>	

{% endblock %}