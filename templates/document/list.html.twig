{% for document in documents %}
	<div class="col-md-4 col-sm-4 animate-box blogBox moreBox fadeIn animated-fast" data-animate-effect="fadeIn">
		<div class="feature-center">
			<span class="icon">
				{% if document.category.id == 1 %}
					<i class="icon-eye"></i>
				{% else %}
					<i class="icon-command"></i>
				{% endif %}	
			</span>
			<P class="small">{{ document.category.name }}</p>
			<h3>{{ document.name }}</h3>
			<p> {{ document.abstract }}</p>
			<p>Post√© le
                {{ document.publishedAt|date("d/m/Y") }}
                    par
                {{ document.author.username }}
            </p>
			<p><a href="{{ path("document_show", { 'slug': document.slug}) }}" class="btn btn-primary">En savoir plus</a></p>
		</div>
	</div>
{% endfor %}


