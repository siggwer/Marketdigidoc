{% extends 'base.html.twig' %}

{% block body %}

<div class="gtco-loader"></div>
	
<div id="page">

	<!-- NAVIGATION -->
	{% include "nav/nav.html.twig" %}

		<!-- HEADER -->
		{% if document.category.id == 1 %}
				<header id="gtco-header" class="gtco-cover gtco-cover-sm" role="banner" style="background-image:url(/images/Img_category_marketing_1.png);">
			{% elseif document.category.id == 2 %}
				<header id="gtco-header" class="gtco-cover gtco-cover-sm" role="banner" style="background-image:url(/images/Img_category_ecommerce_1.png);">
            {% elseif document.category.id == 3 %}
				<header id="gtco-header" class="gtco-cover gtco-cover-sm" role="banner" style="background-image:url(/images/Img_category_branding_1.png);">
            {% elseif document.category.id == 4 %}
				<header id="gtco-header" class="gtco-cover gtco-cover-sm" role="banner" style="background-image:url(/images/Img_category_referencement_1.png);">        
			{% endif %}
		<div class="gtco-container">
			<div class="row">
				<div class="col-md-8 col-md-offset-2 text-center">
					<div class="display-t">
						<div class="display-tc animate-box" data-animate-effect="fadeIn">
							<h1>Détails</h1>
							<h2><a href="#" target="_blank"></a></h2>
						</div>
					</div>
				</div>
			</div>
		</div>
	</header>

<!-- DOCUMENT VIEW -->
<div id="gtco-features-2">
		<div class="gtco-container">
			<div class="row">
				<div class="col-md-8 col-md-offset-2 text-center gtco-heading">
					<h2>{{ document.name }}</h2>
					<h3>{{ document.category.name }}</h3>
					<p>{{ document.abstract }}</p>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<div class="feature-left animate-box" data-animate-effect="fadeInLeft">
						<span class="icon">
							<i class="icon-check"></i>
						</span>
						<div class="feature-copy">
							<p>{{ document.description }}</p>
                            <p>Publié le
                                {{ document.publishedAt|date("d/m/Y") }}
                               par
                                {{ document.author.username }}
                            </p>
						</div>
					</div>
				</div>
				<div class="col-md-6">
                    <div class="gtco-video gtco-bg" style="background-image: url(/images/img_1.jpg); ">
                        {% if document.pictureOnFront is not null %}
                            <img class="card-img-top" src="{{ asset(document.pictureOnFront.path) }}" alt="{{ document.pictureOnFront.alt }}">
                        {% else %}
                            <img class="card-img-top" src="{{ asset('images/img_1.jpg') }}" alt="Pas d'image disponible">
                        {% endif %}
                    </div>
				</div>
                <div class="col-md-6">
					<div class="gtco-video gtco-bg" style="background-image: url(/images/img_1.jpg); ">
						<a href="https://vimeo.com/channels/staffpicks/93951774" class="popup-vimeo"><i class="icon-video2"></i></a>
						<div class="overlay"></div>
					</div>
				</div>
			</div>
		</div>
		<div class="text-center showButton">
				<a href="{{ path("document_to_pdf", { 'slug': document.slug }) }}" class="btn btn-primary">Télécharger en PDF</a>
			{% if is_granted("ROLE_USER") %}
				<a href="{{ path("document_update", { 'slug': document.slug }) }}" class="btn btn-warning float-right">Modifier le document</a>
				<form action="{{ path('document_delete', {'slug' : document.slug }) }}">
					<p>
						{% if app.user == document.author %}
							<button class="btn btn-danger btn-sm float-right">Supprimer</button>
						{% else %}
							<button class="btn btn-danger btn-sm float-right" disabled>Supprimer</button>
						{% endif %}
					</p>
				</form>
			{% endif %}
		</div>
	</div>

	<!-- FOOTER -->
	{% include "footer/footer.html.twig" %}

	<div class="gototop js-top">
		<a href="#" class="js-gotop"><i class="icon-arrow-up"></i></a>
	</div>

</div>

{% endblock %}